{
  "name": "llmux",
  "version": "3.1.0",
  "description": "LLMux - LLM Multiplexer. Unified multi-provider AI gateway with streaming, smart caching, weighted load balancing, and Prometheus metrics",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "start:legacy": "node server.js",
    "dev": "node --watch src/index.js",
    "dev:legacy": "node --watch server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --reporters=default --reporters=jest-junit",
    "health": "curl -s http://localhost:8765/health | jq",
    "metrics": "curl -s http://localhost:8765/metrics"
  },
  "keywords": [
    "llmux",
    "ai",
    "llm",
    "gateway",
    "multiplexer",
    "claude",
    "openai",
    "gemini",
    "ollama",
    "codex",
    "api",
    "proxy",
    "streaming"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.69.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.211.0",
    "@opentelemetry/sdk-node": "^0.211.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.9.2",
    "morgan": "^1.10.0",
    "opossum": "^5.0.1",
    "tiktoken": "^1.0.22",
    "uuid": "^9.0.0",
    "zod": "^4.3.6"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "supertest": "^7.2.2"
  }
}
